<h1>Listing products</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Photo</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= Category.find_by_id(product.category_id).title if product.category_id %></td>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td>$<%= product.price %></td>
    <td><%= image_tag product.photo.url %></td>
    <td><%= link_to 'Show', product %></td>
  </tr>
<% end %>
</table>